{
  "name": "scaffs-vscode",
  "displayName": "Scaffs",
  "description": "Automatically scaffold files based on templates",
  "version": "1.2.4",
  "publisher": "itslennysfault",
  "author": "Lenny Urbanowski",
  "license": "MIT",  
  "engines": {
    "vscode": "^1.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/itslenny/scaffs-vscode.git"
  },  
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.scaffold"
  ],
  "icon":"docs/images/Logo_128.png",
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.scaffold",
        "title": "Scaffold"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceScheme == file",
          "command": "extension.scaffold",
          "group": "YourGroup@1"
        }
      ]
    }
  },
  
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  },
  "dependencies": {
    "@types/fs-extra": "0.0.37",
    "fs-extra": "^2.0.0",
    "scaffs": "~0.3.2"
  }
}
